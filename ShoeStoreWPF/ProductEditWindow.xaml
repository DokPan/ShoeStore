<Window x:Class="ShoeStoreWPF.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoeStoreWPF"
        mc:Ignorable="d"
        Title="Редактирование товара" 
        Height="714" 
        Width="1116"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#f0f0f0">
        <Border Background="White" 
                CornerRadius="10" 
                Margin="30"
                Padding="25">
            <StackPanel>
                <TextBlock Text="Редактирование товара" 
                           FontSize="20" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <StackPanel>
                    <TextBlock Text="Название:" 
                               FontWeight="Medium"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtName" 
                             Height="30"
                             Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Артикул:" 
                               FontWeight="Medium"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtArticle" 
                             Height="30"
                             Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Описание:" 
                               FontWeight="Medium"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtDescription" 
                             Height="60"
                             Padding="5"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Цена:" 
                               FontWeight="Medium"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtPrice" 
                             Height="30"
                             Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Скидка (%):" 
                               FontWeight="Medium"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtDiscount" 
                             Height="30"
                             Padding="5"
                             Text="0"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Количество на складе:" 
                               FontWeight="Medium"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtStockQuantity" 
                             Height="30"
                             Padding="5"/>
                </StackPanel>

                <Button Content="Выбрать изображение" 
                        Height="35"
                        Margin="0,20,0,0"
                        Click="btnSelectImage_Click"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,30,0,0">
                    <Button Content="Сохранить" 
                            Width="100"
                            Height="35"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="btnSave_Click"/>
                    <Button Content="Отмена" 
                            Width="100"
                            Height="35"
                            Background="#f44336"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="20,0,0,0"
                            Click="btnCancel_Click"/>
                </StackPanel>

                <TextBlock x:Name="txtError"
                           Foreground="Red"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
