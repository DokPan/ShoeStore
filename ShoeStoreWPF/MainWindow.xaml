<Window x:Class="ShoeStoreWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoeStoreWPF"
        mc:Ignorable="d"
        Title="Каталог товаров" 
        Height="765" 
        Width="1485"
        WindowStartupLocation="CenterScreen"
        FontFamily="Times New Roman"
        Background="White">

    <DockPanel>
        <Border DockPanel.Dock="Top" 
                Background="#7FFF00" 
                Padding="15" 
                Height="70">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Resources/Icon.png" 
                       Width="45" 
                       Height="45" 
                       Margin="0,0,15,0"/>
                <TextBlock Text="МАГАЗИН ОБУВИ - КАТАЛОГ ТОВАРОВ" 
                           FontSize="20" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="txtUserInfo" 
                           Margin="30,0,0,0"
                           VerticalAlignment="Center"
                           FontSize="14"/>
            </StackPanel>
        </Border>

        <Border DockPanel.Dock="Top" 
                Background="#F0F0F0" 
                Padding="15" 
                BorderThickness="0,0,0,1"
                BorderBrush="#DDD">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Поиск:" 
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>

                <TextBox Grid.Column="1" 
                         x:Name="txtSearch"
                         Height="30"
                         FontSize="14"
                         TextChanged="txtSearch_TextChanged"/>

                <TextBlock Grid.Column="2" 
                           Text="Производитель:" 
                           VerticalAlignment="Center"
                           Margin="10,0,5,0"/>

                <ComboBox Grid.Column="3" 
                          x:Name="cmbManufacturer"
                          Height="30"
                          FontSize="14"
                          SelectionChanged="Filter_Changed"/>

                <TextBlock Grid.Column="4" 
                           Text="Макс. цена:" 
                           VerticalAlignment="Center"
                           Margin="10,0,5,0"/>

                <TextBox Grid.Column="5" 
                         x:Name="txtMaxPrice"
                         Height="30"
                         FontSize="14"
                         TextChanged="Filter_Changed"/>

                <CheckBox Grid.Column="6" 
                          x:Name="chkDiscount"
                          Content="Только со скидкой"
                          VerticalAlignment="Center"
                          Margin="10,0,10,0"
                          Checked="Filter_Changed"
                          Unchecked="Filter_Changed"/>

                <CheckBox Grid.Column="7" 
                          x:Name="chkInStock"
                          Content="Только в наличии"
                          VerticalAlignment="Center"
                          Checked="Filter_Changed"
                          Unchecked="Filter_Changed"/>

                <TextBlock Grid.Column="8" 
                           Text="Сортировка:" 
                           VerticalAlignment="Center"
                           Margin="10,0,5,0"/>

                <ComboBox Grid.Column="9" 
                          x:Name="cmbSort"
                          Height="30"
                          FontSize="14"
                          SelectionChanged="cmbSort_SelectionChanged">
                    <ComboBoxItem Content="По названию (А-Я)" IsSelected="True"/>
                    <ComboBoxItem Content="По названию (Я-А)"/>
                    <ComboBoxItem Content="По цене (возрастание)"/>
                    <ComboBoxItem Content="По цене (убывание)"/>
                    <ComboBoxItem Content="По поставщику (А-Я)"/>
                    <ComboBoxItem Content="По поставщику (Я-А)"/>
                </ComboBox>

                <StackPanel Grid.Column="11" 
                            Orientation="Horizontal"
                            x:Name="panelAdminButtons">
                    <Button Content="Добавить" 
                            Width="90" 
                            Height="30"
                            Margin="5,0"
                            Click="btnAdd_Click"
                            Background="#00FA9A"
                            Foreground="Black"
                            FontWeight="Bold"/>
                    <Button Content="Редактировать" 
                            Width="110" 
                            Height="30"
                            Margin="5,0"
                            Click="btnEdit_Click"
                            Background="#00FA9A"
                            Foreground="Black"
                            FontWeight="Bold"/>
                    <Button Content="Удалить" 
                            Width="90" 
                            Height="30"
                            Margin="5,0"
                            Click="btnDelete_Click"
                            Background="#00FA9A"
                            Foreground="Black"
                            FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <ListView x:Name="itemsProducts" 
                  Background="White"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  BorderThickness="0">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding StockQuantity}" Value="0">
                            <Setter Property="Background" Value="#E1F5FE"/>
                        </DataTrigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#00FA9A"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Фото" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Width="130" Height="130" 
                                        Background="White" 
                                        BorderBrush="#CCC" 
                                        BorderThickness="1">
                                    <Image Source="{Binding ProductImage}" 
                                           Stretch="Uniform"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Товар" Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               FontSize="14"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Description}" 
                                               TextWrapping="Wrap"
                                               MaxWidth="280"
                                               Foreground="#666"
                                               Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                        <TextBlock Text="Производитель: " FontWeight="Medium"/>
                                        <TextBlock Text="{Binding ManufacturerName}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                        <TextBlock Text="Артикул: " FontWeight="Medium"/>
                                        <TextBlock Text="{Binding Article}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="На складе: " FontWeight="Medium"/>
                                        <TextBlock Text="{Binding StockQuantity}"/>
                                        <TextBlock Text="{Binding Unit}" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Цена" Width="180">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Price, StringFormat={}{0:N2}₽}"
                                                   FontSize="14"
                                                   Foreground="Red">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding HasDiscount}" Value="False">
                                                            <Setter Property="Foreground" Value="Black"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                            <Setter Property="FontSize" Value="16"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Text="{Binding FinalPrice, StringFormat={}{0:N2}₽}"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   Foreground="Black"
                                                   Margin="10,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <Border Background="{Binding DiscountBackground}" 
                                            CornerRadius="3" 
                                            Padding="5,3" 
                                            Margin="0,5,0,0"
                                            HorizontalAlignment="Left"
                                            Width="50">
                                        <TextBlock Text="{Binding Discount, StringFormat={}{0}%}"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="В корзину" 
                                        Width="110" 
                                        Height="35"
                                        Background="#00FA9A"
                                        Foreground="Black"
                                        FontWeight="Bold"
                                        Click="btnAddToCart_Click"
                                        Tag="{Binding ProductId}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding StockQuantity}" Value="0">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Setter Property="Background" Value="#CCCCCC"/>
                                                    <Setter Property="Content" Value="Нет в наличии"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>